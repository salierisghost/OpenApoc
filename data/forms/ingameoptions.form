<?xml version="1.0" encoding="UTF-8"?>
<openapoc>
  <form id="FORM_INGAMEOPTIONS">
    <style minwidth="640" minheight="480">
      <position x="centre" y="centre"/>
      <size width="640" height="480"/>
      <graphic>
        <image>xcom3/ufodata/menuopt.pcx</image>
        <position x="0" y="0"/>
        <size width="640" height="480"/>
        <label text="OPTIONS">
          <position x="113" y="0"/>
          <size width="420" height="32"/>
          <alignment horizontal="centre" vertical="centre"/>
          <font>bigfont</font>
        </label>
        <label id="TEXT_FUNDS">
          <position x="572" y="11"/>
          <size width="60" height="10"/>
          <alignment horizontal="left" vertical="centre"/>
          <font>smalfont</font>
        </label>
        <graphicbutton id="BUTTON_OK">
          <position x="602" y="443"/>
          <size width="35" height="34"/>
          <image/>
          <imagedepressed>BUTTON_OK_DEPRESSED</imagedepressed>
        </graphicbutton>
        <textbutton id="BUTTON_SAVEGAME" text="Save Game">
          <position x="18" y="48"/>
          <size width="259" height="28"/>
          <font>smalfont</font>
        </textbutton>
        <textbutton id="BUTTON_LOADGAME" text="Load Game">
          <position x="18" y="76"/>
          <size width="259" height="28"/>
          <font>smalfont</font>
        </textbutton>
        <textbutton id="BUTTON_DELETESAVEDGAME" text="Delete Old Saved Game">
          <position x="18" y="112"/>
          <size width="259" height="28"/>
          <font>smalfont</font>
        </textbutton>
        <textbutton id="BUTTON_ABANDONGAME" text="Abandon and Restart Game">
          <position x="18" y="167"/>
          <size width="259" height="28"/>
          <font>smalfont</font>
        </textbutton>
        <textbutton id="BUTTON_QUIT" text="Quit X-COM Apocalypse">
          <position x="18" y="195"/>
          <size width="259" height="28"/>
          <font>smalfont</font>
        </textbutton>
        <scroll id="GLOBAL_GAIN_SLIDER">
          <position x="76" y="264"/>
          <size width="145" height="15"/>
          <range min="0" max="20"/>
        </scroll>
        <graphicbutton id="GLOBAL_GAIN_DOWN" scrollprev="GLOBAL_GAIN_SLIDER">
          <tooltip text="Softer" font="smallset"/>
          <position x="61" y="262"/>
          <size width="16" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_LEFT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <graphicbutton id="GLOBAL_GAIN_UP" scrollnext="GLOBAL_GAIN_SLIDER">
          <tooltip text="Louder" font="smallset"/>
          <position x="222" y="262"/>
          <size width="17" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_RIGHT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <scroll id="MUSIC_GAIN_SLIDER">
          <position x="76" y="292"/>
          <size width="145" height="15"/>
          <range min="0" max="20"/>
        </scroll>
        <graphicbutton id="MUSIC_GAIN_DOWN" scrollprev="MUSIC_GAIN_SLIDER">
          <tooltip text="Softer" font="smallset"/>
          <position x="61" y="290"/>
          <size width="16" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_LEFT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <graphicbutton id="MUSIC_GAIN_UP" scrollnext="MUSIC_GAIN_SLIDER">
          <tooltip text="Louder" font="smallset"/>
          <position x="222" y="290"/>
          <size width="17" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_RIGHT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <scroll id="SAMPLE_GAIN_SLIDER">
          <position x="76" y="319"/>
          <size width="145" height="15"/>
          <range min="0" max="20"/>
        </scroll>
        <graphicbutton id="SAMPLE_GAIN_DOWN" scrollprev="SAMPLE_GAIN_SLIDER">
          <tooltip text="Softer" font="smallset"/>
          <position x="61" y="318"/>
          <size width="16" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_LEFT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <graphicbutton id="SAMPLE_GAIN_UP" scrollnext="SAMPLE_GAIN_SLIDER">
          <tooltip text="Louder" font="smallset"/>
          <position x="222" y="318"/>
          <size width="17" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_RIGHT_DEPRESSED</imagedepressed>
        </graphicbutton>

        <label id="LIST_NAME">
          <position x="305" y="50"/>
          <font>smalfont</font>
          <size width="270" height="16"/>
          <alignment horizontal="centre" vertical="centre"/>
        </label>

        <scroll id="NOTIFICATIONS_SCROLL">
          <position x="550" y="96"/>
          <size width="16" height="290"/>
        </scroll>
        <listbox id="NOTIFICATIONS_LIST" scrollbarid="NOTIFICATIONS_SCROLL">
          <position x="311" y="76"/>
          <size width="240" height="330"/>
          <item size="16" spacing="4"/>
          <hovercolour r="255" g="255" b="255" a="0"/>
          <selcolour r="255" g="255" b="255" a="0"/>
        </listbox>
        <graphicbutton id="NOTIFICATIONS_SCROLL_UP" scrollprev="NOTIFICATIONS_SCROLL">
          <tooltip text="Scroll Up" font="smallset"/>
          <position x="550" y="76"/>
          <size width="17" height="16"/>
          <image>PCK:xcom3/ufodata/icons.pck:xcom3/ufodata/icons.tab:13:ui/menuopt.pal</image>
          <imagedepressed>PCK:xcom3/ufodata/icons.pck:xcom3/ufodata/icons.tab:14:ui/menuopt.pal</imagedepressed>
        </graphicbutton>
        <graphicbutton id="NOTIFICATIONS_SCROLL_DOWN" scrollnext="NOTIFICATIONS_SCROLL">
          <tooltip text="Scroll Down" font="smallset"/>
          <position x="550" y="390"/>
          <size width="17" height="16"/>
          <image>PCK:xcom3/ufodata/icons.pck:xcom3/ufodata/icons.tab:15:ui/menuopt.pal</image>
          <imagedepressed>PCK:xcom3/ufodata/icons.pck:xcom3/ufodata/icons.tab:16:ui/menuopt.pal</imagedepressed>
        </graphicbutton>

        <label text="Options">
          <position x="305" y="407"/>
          <font>smalfont</font>
          <size width="270" height="16"/>
          <alignment horizontal="centre" vertical="centre"/>
        </label>
        <graphic>
          <image>city/menu-hr.png</image>
          <position x="309" y="425"/>
          <size width="252" height="1"/>
        </graphic>

        <checkbox id="AUTO_SCROLL">
          <position x="310" y="430"/>
          <size width="120" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
          <label text="Auto-scroll">
            <position x="24" y="0"/>
            <font>smalfont</font>
            <size width="90" height="16"/>
          </label>
        </checkbox>

        <checkbox id="TOOL_TIPS">
          <position x="310" y="450"/>
          <size width="120" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
          <label text="Tool tips">
            <position x="24" y="0"/>
            <font>smalfont</font>
            <size width="90" height="16"/>
          </label>
        </checkbox>

        <checkbox id="ACTION_MUSIC">
          <position x="440" y="430"/>
          <size width="120" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
          <label text="Action music">
            <position x="24" y="0"/>
            <font>smalfont</font>
            <size width="90" height="16"/>
          </label>
        </checkbox>

        <checkbox id="AUTO_EXECUTE_ORDERS">
          <position x="440" y="450"/>
          <size width="150" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
          <label text="Exec. rem. orders">
            <position x="24" y="0"/>
            <font>smalfont</font>
            <size width="120" height="16"/>
          </label>
        </checkbox>

        <textbutton text="More options" id="BUTTON_NEXT_LIST">
          <font>smalfont</font>
          <position x="18" y="379"/>
          <size width="259" height="28"/>
        </textbutton>
        <textbutton text="Cheats" id="BUTTON_CHEATS">
          <font>smalfont</font>
          <position x="18" y="407"/>
          <size width="259" height="28"/>
        </textbutton>
        <textbutton id="BUTTON_EXIT_BATTLE" text="Exit Battle">
          <font>smalfont</font>
          <position x="18" y="435"/>
          <size width="259" height="28"/>
        </textbutton>
        <textbutton id="BUTTON_SKIRMISH" text="Skirmish Mode">
          <font>smalfont</font>
          <position x="18" y="435"/>
          <size width="259" height="28"/>
        </textbutton>
      </graphic>
    </style>
  </form>
</openapoc>
